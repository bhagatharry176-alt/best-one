# Railway Environment Variables Template
# Set these variables in Railway dashboard under Variables tab

# REQUIRED: Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_from_botfather
API_ID=your_api_id_from_my_telegram_org
API_HASH=your_api_hash_from_my_telegram_org
OWNER=your_telegram_user_id_number

# OPTIONAL: Bot Customization
CREDIT=YourName
REPO_URL=https://github.com/YourUsername/your-repo
AUTH_USERS=user1_id,user2_id,user3_id

# OPTIONAL: API Tokens (if using premium features)
API_TOKEN=your_api_token_if_needed
TOKEN_CP=your_classplus_token_if_needed
ADDA_TOKEN=your_adda_token_if_needed

# OPTIONAL: Performance Optimizations for Railway
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
AIOHTTP_NO_EXTENSIONS=1
PYTHONASYNCIODEBUG=0
PYTHONMALLOC=malloc

# OPTIONAL: Advanced Configuration
LOG_LEVEL=INFO
DEBUG=False
WEBHOOK_URL=https://your-app.railway.app/webhook

# Railway automatically provides:
# PORT (for health checks)
# RAILWAY_ENVIRONMENT
# RAILWAY_DEPLOYMENT_ID